#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# TypeScript type checking (fastest, fails early)
echo "ğŸ”§ Type checking..."
pnpm typecheck || {
  echo "âŒ TypeScript errors found. Please fix them before committing."
  exit 1
}

# ESLint (quick syntax and style checks)
echo "ğŸ§¹ Linting..."
pnpm lint || {
  echo "âŒ Linting errors found. Please fix them before committing."
  exit 1
}

# Prettier formatting check (fast)
echo "ğŸ’… Checking formatting..."
pnpm format:check || {
  echo "âŒ Code formatting issues found. Run 'pnpm format' to fix them."
  exit 1
}

echo "âœ… All pre-commit checks passed!"
