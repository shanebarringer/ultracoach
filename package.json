{
  "name": "ultracoach",
  "version": "0.1.0",
  "description": "Ultra-marathon training management platform for coaches and runners",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "next dev -p 3001",
    "dev:local": "concurrently \"supabase start\" \"next dev -p 3001\"",
    "dev:db": "supabase start",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:setup": "./supabase/scripts/setup_with_env.sh",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:reset": "./supabase/scripts/reset_database.sh",
    "db:fix-passwords": "./supabase/scripts/fix_test_passwords.sh",
    "db:backup": "./supabase/scripts/backup_user_data.sh",
    "prod:db:reset": "supabase db reset",
    "prod:db:push": "supabase db push",
    "prod:db:seed": "NODE_ENV=production tsx scripts/seed-database.ts",
    "prod:db:query": "export $(grep -v '^#' .env.local | xargs) && psql \"$DATABASE_URL\" -c",
    "prod:db:status": "export $(grep -v '^#' .env.local | xargs) && psql \"$DATABASE_URL\" -c \"SELECT schemaname, tablename FROM pg_tables WHERE schemaname = 'public' ORDER BY tablename;\"",
    "prod:db:users": "export $(grep -v '^#' .env.local | xargs) && psql \"$DATABASE_URL\" -c \"SELECT id, email, role, created_at FROM better_auth_users ORDER BY created_at;\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@better-auth/cli": "^1.2.12",
    "@heroicons/react": "^2.2.0",
    "@heroui/react": "^2.7.11",
    "@heroui/theme": "^2.4.17",
    "@hookform/resolvers": "^5.1.1",
    "@supabase/supabase-js": "^2.50.5",
    "@tailwindcss/forms": "^0.5.10",
    "@types/better-sqlite3": "^7.6.13",
    "@types/pg": "^8.15.4",
    "axios": "^1.10.0",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.2.12",
    "better-sqlite3": "^12.2.0",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.3",
    "framer-motion": "^12.23.3",
    "jotai": "^2.12.5",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.60.0",
    "tslog": "^4.9.3",
    "zod": "^4.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/eslint-plugin-next": "^15.4.4",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/classnames": "^2.3.4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
